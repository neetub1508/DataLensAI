# Frontend E2E Test Dockerfile
FROM mcr.microsoft.com/playwright:v1.40.1-jammy

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy test files and configuration
COPY playwright.config.ts ./
COPY tests/ ./tests/
COPY src/ ./src/

# Install Playwright browsers (already included in the base image but ensure latest)
RUN npx playwright install --with-deps

# Set default command for E2E testing
CMD ["npx", "playwright", "test"]